#ffmpeg src
FFMPEG_VERSION = 3.2.12
SRC_FFMPEG = ffmpeg-$(FFMPEG_VERSION).tar.bz2

BUILDPATH=build_android
WORK_PATH := $(shell pwd)

#all: ffmpeg 
#all: ffmpeg-fast 
all: ffmpeg-opt
clean: 
	rm -rf $(BUILDPATH)

#ready action
SOURCE_REDAY = #cp_source_code tar_source_code 
cp_source_code:
	mkdir $(BUILDPATH) && \
	cp src/$(SRC_FFMPEG) $(BUILDPATH)

tar_source_code:
	cd $(BUILDPATH) && \
	tar xvf $(SRC_FFMPEG) && rm $(SRC_FFMPEG)

#ndk settings
API=22
NDK_ENV=darwin
NDK_ROOTPATH=/Users/luolongzhi/Software/android-ndk-for-mac
#NDK_ENV=linux
#NDK_ROOTPATH=/data/Software/android-ndk-for-ubuntu


#arm arm64 mips mips64 x86 x86_64
NDK = $(NDK_ROOTPATH)/android-ndk-r15c
SYSROOT = $(NDK)/platforms/android-$(API)/arch-$(ARCH)/
#SYSROOT = $(NDK)/sysroot
ADDI_CFLAGS=-marm
#ADDI_CFLAGS=-marm -isystem $(NDK)/sysroot/usr/include/$(TRIPLE) -D__ANDROID_API__=$(API)
#ADDI_CFLAGS=-marm -isystem $(NDK)/sysroot/usr/include/$(TRIPLE)
ADDI_LDFLAGS=-L$(SYSROOT)/usr/lib/ -lm -llog



#common ffmpeg filter and demuxer and decoder
COMMON_FILTERS_OPT1 = aresample scale crop overlay
COMMON_DEMUXERS_OPT1 = matroska ogg avi mov flv mpegps image2 mp3 aac adts ac3 wav concat
COMMON_DECODERS_OPT1 = \
	vp8 vp9 theora \
	mpeg2video mpeg4 h264 hevc \
	png mjpeg \
	vorbis opus \
	mp3 ac3 aac \
	pcm_s16le pcm_s16be\
	ass ssa srt webvtt

COMMON_FILTERS_OPT2 = aresample scale crop overlay
COMMON_DEMUXERS_OPT2 = mov flv hls mpegps mpegts image2 mp3 aac adts ac3 wav concat
COMMON_DECODERS_OPT2 = \
	vp8 vp9 \
	mpeg2video mpeg4 h264 \
	vorbis opus \
	mp3 ac3 aac \
	pcm_s16le pcm_s16be\

FFMPEG_COMMON_ARGS = \
	--target-os=android \
	--enable-cross-compile \
	--enable-shared \
	--disable-static \
	--disable-doc \
	--enable-ffmpeg \
	--disable-ffplay \
	--disable-ffprobe \
	--disable-doc \
	--disable-symver 

FFMPEG_OPT_COMMON = \
	--target-os=android \
	--enable-cross-compile \
	--enable-shared \
	--disable-static \
	--disable-doc \
	--disable-doc \
	--disable-symver \
	\
	--disable-all \
	--enable-avcodec \
	--enable-avdevice \
	--enable-avformat \
	--enable-avfilter \
	--enable-avutil \
	--enable-swresample \
	--enable-swscale \
	--enable-network \
	--enable-protocol=rtmp\
	--enable-protocol=http\
	--enable-protocol=file \
	--disable-bzlib \
	--disable-iconv \
	--disable-libxcb \
	--disable-lzma \
	--disable-sdl2 \
	--disable-securetransport \
	--disable-xlib \
	--disable-zlib


FFMPEG_OPT1_ARGS = \
	$(FFMPEG_OPT_COMMON) \
	$(addprefix --enable-decoder=,$(COMMON_DECODERS_OPT1)) \
	$(addprefix --enable-demuxer=,$(COMMON_DEMUXERS_OPT1)) \
	$(addprefix --enable-filter=,$(COMMON_FILTERS_OPT1)) \

FFMPEG_OPT2_ARGS = \
	$(FFMPEG_OPT_COMMON) \
	$(addprefix --enable-decoder=,$(COMMON_DECODERS_OPT2)) \
	$(addprefix --enable-demuxer=,$(COMMON_DEMUXERS_OPT2)) \
	$(addprefix --enable-filter=,$(COMMON_FILTERS_OPT2)) \


#arm/armeabi-v7a/armv7-a  aarch64/arm64-v8a/armv8-a x86/x86/i686
#----------------------------------arch define-----------------------------------

#arm/aarch64/x86
ARCH=arm
#ARCH=aarch64
#ARCH=x86

#armeabi-v7a/arm64-v8a/x86
ARCH_NAME=armeabi-v7a
#ARCH_NAME=arm64-v8a
#ARCH_NAME=x86

#armv7-a/armv8-a/i686
CPU=armv7-a
#CPU=armv8-a
#CPU=i686

#arm-linux-androideabi/aarch64-linux-android-4.9/x86-4.9
TRIPLE=arm-linux-androideabi
#TRIPLE=aarch64-linux-android
#TRIPLE=x86

#arm-linux-androideabi/aarch64-linux-android/i686-linux-android
GCC_PREFIX=arm-linux-androideabi
#GCC_PREFIX=aarch64-linux-android 
#GCC_PREFIX=i686-linux-android

#----------------------------------arch define-----------------------------------

TOOLCHAIN = $(NDK)/toolchains/$(TRIPLE)-4.9/prebuilt/$(NDK_ENV)-x86_64
CROSS_PREFIX = $(TOOLCHAIN)/bin/$(GCC_PREFIX)-

ffmpeg: $(SOURCE_REDAY)
	cd $(BUILDPATH)/ffmpeg-$(FFMPEG_VERSION) && \
	./configure \
		$(FFMPEG_OPT1_ARGS) \
		--prefix=$(WORK_PATH)/dist/ffmpeg-$(FFMPEG_VERSION)/$(ARCH_NAME) \
		--cross-prefix=$(CROSS_PREFIX) \
		--arch=$(ARCH) \
		--cpu=$(CPU) \
		--sysroot=$(SYSROOT) \
		--extra-cflags="-Os -fPIC $(ADDI_CFLAGS)" \
		--extra-ldflags="$(ADDI_LDFLAGS)" \
		&& \
	make -j4 && \
	make install

ffmpeg-opt:
	cd $(BUILDPATH)/ffmpeg-$(FFMPEG_VERSION) && \
	./configure \
		$(FFMPEG_OPT2_ARGS) \
		--prefix=$(WORK_PATH)/dist/ffmpeg-$(FFMPEG_VERSION)/$(ARCH_NAME) \
		--cross-prefix=$(CROSS_PREFIX) \
		--arch=$(ARCH) \
		--cpu=$(CPU) \
		--sysroot=$(SYSROOT) \
		--extra-cflags="-Os -fPIC $(ADDI_CFLAGS)" \
		--extra-ldflags="$(ADDI_LDFLAGS)" \
		&& \
	make -j4 && \
	make install

ffmpeg-fast: 
	cd $(BUILDPATH)/ffmpeg-$(FFMPEG_VERSION) && \
	make -j4 && \
	make install


